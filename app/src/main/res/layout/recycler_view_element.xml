<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="5dp"
    android:layout_margin="5dp"
    android:layout_marginBottom="5dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/route"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            tools:text="City-City" />

        <TextView
            android:id="@+id/sender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Телефон отправителя:"
            android:textSize="16sp"
            tools:text="Телефон отправителя:" />

        <TextView
            android:id="@+id/recipient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Телефон получателя:"
            android:textSize="16sp"
            tools:text="Телефон получателя:" />

        <TextView
            android:id="@+id/product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Груз:"
            android:textSize="16sp"
            tools:text="Груз:" />

        <TextView
            android:id="@+id/receivedDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Дата прибытия:"
            android:textSize="16sp"
            tools:text="Дата прибытия:" />

        <Button
            android:id="@+id/detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="Подробней"
            android:textSize="16sp"
            tools:text="Подробней" />
    </LinearLayout>
</android.support.v7.widget.CardView>